<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head'); %>
</head>
<body> 

    <header>
        <%- include('../partials/header'); %>
    </header>
    
    <main>
        <section class="x-overflow">
        <% users.forEach((user) =>{ %>
            <section class="section">
              <a href="users/<%= user._id %> ">
      
                <article>
                  <h1><%= user.name %> </h1>
                  <div style="background-image: url('<%= user.pictureUser %>');">
                  </div>
                  <img src="<%= user.pictureUser %> " alt="">
                </article>
      
                <article>
                  <p><strong>Leeftijd:</strong> <span><%= user.age %></span> </p>
                  <p><strong>Hulp:</strong></p>
                  <ul>
                    <% user.help.forEach((help)=> { %>
                    <li><%= help %></li>
                    <% }); %>
                  </ul>
                </article>
            </section>
        <% }); %>
        </section>
    </main>
    
</body>
</html>